<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Store</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .movie-item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
@{
    var movies = new List<dynamic>
    {
        new { Id = 1, Title = "X-Men: The Last Stand", Image = "movie1.jpg", Alt = "Movie 1", Hidden = false },
        new { Id = 2, Title = "Spider Man 2", Image = "movie2.jpg", Alt = "Movie 2", Hidden = false },
        new { Id = 3, Title = "Spider Man 3", Image = "movie3.jpg", Alt = "Movie 3", Hidden = false },
        new { Id = 4, Title = "Valkyrie", Image = "movie4.jpg", Alt = "Movie 4", Hidden = false },
        new { Id = 5, Title = "Gladiator", Image = "movie5.jpg", Alt = "Movie 5", Hidden = false },
        new { Id = 6, Title = "Movie 6", Image = "movie6.jpg", Alt = "Movie 6", Hidden = true },
        new { Id = 7, Title = "Movie 7", Image = "movie7.jpg", Alt = "Movie 7", Hidden = true }
    };
}
<div class="container mt-4">
    <h3 class="text-warning">Latest Trailers</h3>
    <div class="row" id="latest-trailers">
        <!-- Tıklanabilir film öğeleri -->
        @foreach (var movie in movies)
        {
            <div class="col-md-2 movie-item @(movie.Hidden ? "hidden" : "")">
                <a href="@Url.Action("Details", "Movie", new { id = movie.Id })">
                    <img src="@movie.Image" alt="@movie.Alt">
                    <p>@movie.Title</p>
                </a>
            </div>
        }
    </div>
    <button class="btn btn-warning mt-2" onclick="showMore('latest-trailers')">See All</button>
</div>

<script>
    function showMore(categoryId) {
        let hiddenItems = document.querySelectorAll(`#${categoryId} .hidden`);
        hiddenItems.forEach(item => item.classList.remove('hidden'));
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>