<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Store</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .movie-item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h3 class="text-warning">Latest Trailers</h3>
        <div class="row" id="latest-trailers">
            <!-- Tıklanabilir film öğeleri -->
            <div class="col-md-2 movie-item">
                <a href="@Url.Action("MovieInfo", "Home", new { id = 1 })">
                    <img src="movie1.jpg" alt="Movie 1">
                </a>
            </div>
            <div class="col-md-2 movie-item">
                <a href="@Url.Action("MovieInfo", "Home", new { id = 2 })">
                    <img src="movie2.jpg" alt="Movie 2">
                </a>
            </div>
            <div class="col-md-2 movie-item">
                <a href="@Url.Action("MovieInfo", "Home", new { id = 3 })">
                    <img src="movie3.jpg" alt="Movie 3">
                </a>
            </div>
            <div class="col-md-2 movie-item">
                <a href="@Url.Action("MovieInfo", "Home", new { id = 4 })">
                    <img src="movie4.jpg" alt="Movie 4">
                </a>
            </div>
            <div class="col-md-2 movie-item">
                <a href="@Url.Action("MovieInfo", "Home", new { id = 5 })">
                    <img src="movie5.jpg" alt="Movie 5">
                </a>
            </div>
            <div class="col-md-2 movie-item hidden">
                <a href="@Url.Action("MovieInfo", "Home", new { id = 6 })">
                    <img src="movie6.jpg" alt="Movie 6">
                </a>
            </div>
            <div class="col-md-2 movie-item hidden">
                <a href="@Url.Action("MovieInfo", "Home", new { id = 7 })">
                    <img src="movie7.jpg" alt="Movie 7">
                </a>
            </div>
        </div>
        <button class="btn btn-warning mt-2" onclick="showMore('latest-trailers')">See All</button>
    </div>

    <script>
        function showMore(categoryId) {
            let hiddenItems = document.querySelectorAll(`#${categoryId} .hidden`);
            hiddenItems.forEach(item => item.classList.remove('hidden'));
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>