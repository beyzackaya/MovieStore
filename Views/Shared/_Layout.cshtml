<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Movie Store</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .top-bar {
            background-color: #222;
            padding: 6px 20px;
            font-size: 14px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            border-bottom: 2px solid #444;
        }

        .top-bar .user-name {
            color: white !important;
            font-weight: bold;
            margin-right: 12px;
        }

        .top-bar .divider {
            color: #777;
            margin: 0 10px;
        }

        .top-bar .nav-link {
            color: #ddd !important;
            font-weight: bold;
            padding: 4px 10px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .top-bar .nav-link:hover {
            background-color: #f8d210;
            color: black !important;
        }

        .navbar-nav .nav-link {
            color: white !important;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            color: #f8d210 !important;
        }
    </style>
</head>
<body>

    <div class="top-bar bg-dark text-white p-2">
        @if (Context.Request.Cookies["UserInfo"] != null)
        {
            var userInfo = Context.Request.Cookies["UserInfo"];
            <span class="user-name">Welcome! @userInfo</span>
        }
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">🎬Movie Store</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Movie" asp-action="Index">Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cart" asp-action="Index">🛒Cart</a>
                </li>
                @if (Context.Request.Cookies["UserInfo"] != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>


    <div class="container mt-4">
        @RenderBody()  
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; 2025 Movie Store. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>