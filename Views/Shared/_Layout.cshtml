@{
    var categories = new List<MovieStore.Models.Category>
    {
        new MovieStore.Models.Category { CategoryID = 1, Name = "Latest Trailers" },
        new MovieStore.Models.Category { CategoryID = 2, Name = "Top Rated" },
        new MovieStore.Models.Category { CategoryID = 3, Name = "Most Commented" },
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Movie Store</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .top-bar {
            background-color: #222;
            padding: 10px 20px;
            font-size: 16px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            border-bottom: 2px solid #444;
        }

        .top-bar .user-name {
            color: #fff;
            font-weight: bold;
            margin-right: 15px;
        }

        .top-bar .divider {
            color: #777;
            margin: 0 10px;
        }

        .navbar {
            background-color: #1c1c1c;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-nav .nav-link {
            color: #ddd !important;
            font-weight: bold;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            background-color: #f8d210;
            color: black !important;
            border-radius: 5px;
        }

        .navbar-nav .category-nav {
            margin-right: auto;
        }

        /* Movie Section */
        .movie-item {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .movie-item:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

        .movie-item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .movie-title {
            font-size: 18px;
            color: #fff;
            font-family: 'Playfair Display', serif;
            font-weight: 600;
            margin-top: 10px;
            text-align: center;
        }

        .movie-title:hover {
            color: #f8d210;
        }

        footer {
            background-color: #1c1c1c;
            padding: 20px 0;
            color: #fff;
        }

        footer p {
            margin: 0;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <div class="top-bar">
        @if (Context.Request.Cookies["UserInfo"] != null)
        {
            var userInfo = Context.Request.Cookies["UserInfo"];
            <span class="user-name">Welcome! @userInfo</span>
        }
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">🎬Movie Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav category-nav">
                    @foreach (var category in categories)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movie" asp-action="Category" asp-route-id="@category.CategoryID">@category.Name</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cart" asp-action="Index">🛒Cart</a>
                    </li>
                    @if (Context.Request.Cookies["UserInfo"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center py-3">
        <p>&copy; 2025 Movie Store.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>