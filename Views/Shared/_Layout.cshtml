<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Movie Store</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


    <style>
        /* Üst menü (Top Bar) */
        .top-bar {
            background-color: #222;
            padding: 6px 20px;
            font-size: 14px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            border-bottom: 2px solid #444;
        }

        .top-bar .user-name {
            color: white !important;
            font-weight: bold;
            margin-right: 12px;
        }

        .top-bar .divider {
            color: #777;
            margin: 0 10px;
        }

        .top-bar .nav-link {
            color: #ddd !important;
            font-weight: bold;
            padding: 4px 10px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .top-bar .nav-link:hover {
            background-color: #f8d210;
            color: black !important;
        }

        /* Navbar içindeki linklerin (Cart, Home) stilini ayarla */
        .navbar-nav .nav-link {
            color: white !important;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        /* Hover efekti */
        .navbar-nav .nav-link:hover {
            color: #f8d210 !important;
        }
    </style>
</head>
<body>

    <!-- ÜST MENÜ (Daha Estetik) -->
    <div class="top-bar">
        @if (Context.Request.Cookies["UserInfo"] != null)
        {
            var userInfo = Context.Request.Cookies["UserInfo"];
            <span class="user-name">@userInfo</span> 
            <span class="divider">|</span>
            <a class="nav-link d-inline" href="@Url.Action("Logout", "Account")">Logout</a>
        }
        else
        {
            <a class="nav-link d-inline" href="@Url.Action("Login", "Account")">Login</a>
        }
    </div>

    <!-- Ana Menü -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">🎬Movie Store</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Movie" asp-action="Index">Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cart" asp-action="Index">🛒Cart</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


    <div class="container mt-4">
        @RenderBody()  <!-- Sayfanın içeriği buraya eklenecek! -->
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p>&copy; 2025 Movie Store. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>