@model MovieStore.Models.Movie

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #1a1a1a; 
            color: #e0e0e0; 
            font-family: 'Arial', sans-serif;
        }
        .container {
            max-width: 900px;
            margin-top: 50px;
        }
        .movie-card {
            background-color: #2c2c2c;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }
        .movie-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.6);
        }
        .movie-image {
            max-width: 300px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }
        .movie-details {
            text-align: center; 
            margin-left: 20px;
            flex-grow: 1;
        }
        .movie-details h2 {
            font-size: 24px;
        }
        .movie-details p {
            font-size: 18px;
            margin: 8px 0;
        }
        .btn {
            margin-top: 20px;
            background-color: #f8d210;
            color: #000;
            border: none;
            padding: 12px 25px;
            border-radius: 30px;
            font-size: 18px;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.3s ease;
            display: block;
            width: 200px; 
            margin-left: auto;
            margin-right: auto;
        }
        .btn:hover {
            background-color: #ffcc00;
            transform: scale(1.05);
        }
        a {
            color: #ffc107;
            text-decoration: none;
            font-size: 18px;
            margin-top: 20px;
            display: inline-block;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: color 0.3s ease, transform 0.3s ease;
        }
        a:hover {
            color: #ffcc00;
            transform: translateY(-3px);
        }
        .alert {
            background-color: #f2d7d5;
            color: #c0392b;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
        }
        
    </style>
</head>
<body>
    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert">@TempData["Message"]</div>
        }
        <div class="movie-card">
            <img src="@Model.ImageUrl" alt="@Model.Alt" class="movie-image">
            <div class="movie-details">
                <h2>@Model.Title</h2>
                <p><strong>Director:</strong> @Model.Director</p>
                <p><strong>Stars:</strong> @Model.Stars</p>
                <p><strong>Release Year:</strong> @Model.ReleaseYear</p>
            </div>
        </div>
        <form method="post" action="@Url.Action("AddToCart", "Movie", new { id = @Model.MovieID })">
            <button type="submit" class="btn">Add To Cart</button>
        </form>
        <div class="mt-3">
            <a href="@Url.Action("Index", "Cart")">View Your Cart</a><br>
            <a href="@Url.Action("Index", "Home")">Back to Main Page</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>