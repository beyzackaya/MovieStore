@using MovieStore.Models
@model MovieStore.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<a asp-controller="Movie" asp-action="Details" asp-route-id="@Model.MovieID" class="text-decoration-none">
    <div class="card shadow-sm">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text"><strong>Director:</strong> @Model.Director</p>
            <p class="card-text"><strong>Stars:</strong> @string.Join(", ", Model.Stars)</p>
            <p class="card-text"><strong>Year:</strong> @Model.ReleaseYear</p>
        </div>
    </div>
</a>