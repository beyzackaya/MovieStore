@model List<MovieStore.Models.Movie>

@{
    ViewData["Title"] = "Cart";
}

<h2>Shopping Cart</h2>
<p>Your selected movies will appear here.</p>

@if (Model.Count == 0)
{
    <p>No movies in your cart.</p>
}
else
{
    <ul>
        @foreach (var movie in Model)
        {
            <li>@movie.Alt</li>
        }
    </ul>
}