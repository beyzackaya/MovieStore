@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #212121;">
    <div class="card p-4" style="max-width: 400px; width: 100%; background-color: #333; border-radius: 15px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);">
        <div class="text-center mb-4">
            <h2 class="text-white font-weight-bold">Login</h2>
        </div>
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="mb-3">
                <label for="firstName" class="form-label text-white">First Name</label>
                <input type="text" id="firstName" name="firstName" class="form-control bg-light text-dark border-0 rounded-3 shadow-sm" placeholder="Your first name" required />
            </div>
            <div class="mb-3">
                <label for="lastName" class="form-label text-white">Last Name</label>
                <input type="text" id="lastName" name="lastName" class="form-control bg-light text-dark border-0 rounded-3 shadow-sm" placeholder="Your last name" required />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-light text-dark py-2 rounded-3">Login</button>
            </div>
        </form>
        <div class="mt-3 text-center text-white">
            <small>&copy; 2025 YourCompany. All rights reserved.</small>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger text-center mt-3">
        @ViewBag.ErrorMessage
    </div>
}